{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["views/**", "public/**"]
        }
      }
    ],
    "routes": [
      {
        "src": "/socket.io/(.*)",
        "dest": "server.js"
      },
      {
        "src": "/peerjs/(.*)",
        "dest": "server.js"
      },
      {
        "src": "/room/(.*)",
        "dest": "server.js"
      },
      {
        "src": "/join",
        "dest": "server.js"
      },
      {
        "src": "/public/(.*)",
        "dest": "/public/$1"
      },
      {
        "src": "/(.*)",
        "dest": "server.js"
      }
    ]
  }